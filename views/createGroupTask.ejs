<!DOCTYPE html>
<html lang="en">
<head><%- include('partials/heading.ejs') %></head>
<body>
    <!-- Animated Background -->
    <%- include('partials/animation.ejs') %>

    <!-- Top Navigation -->
    <%- include('partials/navigation.ejs') %>

    <!-- Main Content -->
    <div class="main-content">
        <div class="createGroupTaskh1">
            <h1>Create And Assign Task</h1>
        </div>
        <div class="text-container">
            <form class="submitFormCreateAccount" action="/create/createGroupTask" method="POST">
                <label for="taskName">Task Name:</label>
                <input type="text" id="taskName" name="taskName" required>
            
                <label for="description">Description:</label>
                <textarea id="description" name="description" required></textarea>
            
                <label for="selectGroup">Select Group:</label>
                <select id="selectGroup" name="selectGroup">
                    <% groups.forEach(group => { %>
                        <option value="<%= group.id %>"><%= group.name %></option>
                    <% }); %>

                <!-- Add your group selection input here -->
            
                <label for="dueDate">Due Date:</label>
                <input type="date" id="dueDate" name="dueDate" required>
            
                <label for="selectAssignee">Assignee:</label>
                <select id="selectAssignee" name="selectAssignee" >
                    <% members.forEach(member => { %>
                        <option value="<%= member.id %>"><%= member.name %></option>
                    <% }); %>
                </select>
            
                <!-- If you want to allow manual input for assignee, uncomment the next line -->
                <!-- <input type="text" id="assignee" name="assignee" placeholder="Or type the assignee's name"> -->
            
                <button type="submit">Create Task</button>
                <div class="button-container">

                    <a href="/viewGroupTask/<%= group_id %>" ><button class ="btn" type="button" >Back</button>
                    </a>
                        <!-- <div style="height: 40px; width:1px; position:relative;"></div>
                    <a href="/userHomePage"><button  class="btn" id="backBtnCreateGroup">Back</button></a>
                </div> -->
            </form>
            
        </div>
    </div>
</body>
</html>
