<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Group Tasks</title>
    <link rel="stylesheet" href="/css/zaraHomepage.css"> <!-- Assuming you have a separate CSS file -->
</head>
<body>
    <header>
        <nav>
            <img src="/images/flat_app.png" >
            <h1><%= group[0].name %> Chores</h1>
            <ul>
                <li><a href="#">View Group Task</a></li>
                <li><a href="#">View Your Task</a></li>
                <li><a href="#">Create New Task</a></li>
                <li><a href="#">Create New Group</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section id="overview">
            <h2>Overview</h2>
            <div id="today">
                <h3>Today <button>Edit</button> </h3><!-- this should allow user to edit task by adding or removing them-->
                <table>
                    <thead>
                        <tr>
                            <td></td>
                            <th>Task</th>
                            <th>Description</th>
                            <th>Assigned</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i = 0; i < tasks.length; i++) { %>
                            <tr>
                                <td><input type="checkbox"></td> <!-- Checkbox added here -->
                                <td><%= tasks[i].status %></td>
                                <td><%= tasks[i].description %></td>
                                <td><%= tasks[i].name %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div id="tomorrow">
                <h3>Tomorrow</h3>
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Task</th>
                            <th>Description</th>
                            <th>Assigned</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i = 0; i < tasks.length; i++) { %>
                            <tr>
                                <td><input type="checkbox"></td> <!-- Checkbox added here -->
                                <td><%= tasks[i].status %></td>
                                <td><%= tasks[i].description %></td>
                                <td><%= tasks[i].name %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div id="thisWeek">
                <h3>This Week</h3>
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Task</th>
                            <th>Description</th>
                            <th>Assigned</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i = 0; i < tasks.length; i++) { %>
                            <tr>
                                <td><input type="checkbox"></td> <!-- Checkbox added here -->
                                <td><%= tasks[i].status %></td>
                                <td><%= tasks[i].description %></td>
                                <td><%= tasks[i].name %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
    <footer>
        <!-- Footer content -->
    </footer>
</body>
</html>
