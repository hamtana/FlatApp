    <main>
        <section id="overview">
            <h2>Overview</h2>
            <div id="today">
                <h3>Today</h3><!-- this should allow user to edit task by adding or removing them-->
                <table>
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Task</th>
                            <th>Assigned</th>
                            <th>Complete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (tasks_today && tasks_today.length > 0) { %>
                            <% for (let i = 0; i < tasks_today.length; i++) { %>
                                <tr>
                                    <td><%= tasks_today[i].status %></td>
                                    <td><%= tasks_today[i].description %></td>
                                    <td><%= tasks_today[i].name %></td>
                                    <td>
                                        <form action="/markComplete/<%= tasks_today[i].id %>" method="POST">
                                            <button type="submit">Mark Complete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div id="tomorrow">
                <h3>Tomorrow</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Task</th>
                            <th>Assigned</th>
                            <th>Complete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (tasks_tomorrow && tasks_tomorrow.length > 0) { %>
                            <% for (let i = 0; i < tasks_tomorrow.length; i++) { %>
                                <tr>
                                    <td><%= tasks_tomorrow[i].status %></td>
                                    <td><%= tasks_tomorrow[i].description %></td>
                                    <td><%= tasks_tomorrow[i].name %></td>
                                    <td>
                                        <form action="/markComplete/<%= tasks_tomorrow[i].id %>" method="POST">
                                            <button type="submit">Mark Complete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div id="thisWeek">
                <h3>This Week</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Task</th>
                            <th>Assigned</th>
                            <th>Complete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (tasks_week && tasks_week.length > 0) { %>
                            <% for (let i = 0; i < tasks_week.length; i++) { %>
                                <tr>
                                    <td><%= tasks_week[i].status %></td>
                                    <td><%= tasks_week[i].description %></td>
                                    <td><%= tasks_week[i].name %></td>

                                    <td>
                                        <form action="/markComplete/<%= tasks_week[i].id %>" method="POST">
                                            <button type="submit">Mark Complete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
