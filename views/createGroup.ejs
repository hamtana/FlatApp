<!DOCTYPE html>
<html lang="en">
<head><%- include('partials/heading.ejs') %></head>
<body>
    <!-- Animated Background -->
    <%- include('partials/animation.ejs') %>

    <!-- Top Navigation -->
    <div class="navbar">
        <a href="http://localhost:8080/"><img src="/images/flat_app.png" class="logo" alt="Flat App Logo"></a>
        <div class="tab">
            <button class="btn tablinks" id="defaultOpen" onclick="openCity(event, 'createGroup')">Create Group</button>
            <button class="btn tablinks"  onclick="openCity(event, 'createGroupTask')">Create Group Task</button>
            <button class="btn tablinks"  onclick="openCity(event, 'createIndividualTask')">Create Individual Task</button>
        </div>
    </div>

    <!-- Create Group -->
    <div id="createGroup" class="tabcontent">
        <div class="main-content">
            <div class="text-container">
                <form class="submitFormCreateAccount" action="/create/group" method="POST">
                    <fieldset>
                        <div class="groupname">
                            <label for="groupName">Group Name:</label><br>
                            <div class="groupnametextbox">
                                <input type="text" name="groupName" id="groupName"><br>
                            </div>
                        </div>
                    </fieldset>
                    <label for="description">Description:</label><br>
                    <textarea id="description" name="description" rows="4" required></textarea><br>
                
                    <!-- Group Member selection is commented out
                    <label for="groupMember">Group Member:</label><br>
                    <select id="groupMember" name="groupMember" required>
                        <option value="">Select Member</option>
                        Add group members here automatically generated from DB connection
                        <option value="Do the laundry">Do the laundry</option>
                    </select><br>
                    -->
                
                    <div class="button-container">
                        <button class="button" id="submitBtnCreateGroup" type="submit">Create Group</button>
                    </div>
                </form>
            </div>
            <div class="button-container">
                <div style="height: 40px; width:1px; position:relative;"></div>
                <a href="/userHomePage"><button  class="btn" id="backBtnCreateGroup">Back</button></a>
            </div>
        </div>
    </div>

    
</body>
</html>